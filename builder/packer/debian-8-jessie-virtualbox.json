{
  "variables": {
    "core": "2",
    "memory": "2048",
    "disk_size": "10000",
    "ssh_port": "22",
    "ssh_wait_timeout": "60m",
    "iso_url": "http://cdimage.debian.org/debian-cd/8.5.0/amd64/iso-cd/debian-8.5.0-amd64-netinst.iso",
    "iso_md5": "3e1b9029a0cf188730646c379d15073f",
    "vm_name": "mrotlettest"
  },
  "builders": [
    {
	"type": "virtualbox-iso",
	"boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed-debian.cfg <wait>",
        "debian-installer=en_US <wait>",
        "auto <wait>",
        "locale=en_US <wait>",
        "kbd-chooser/method=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "<enter><wait>"
      ],
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "Debian_64",
      "headless": false,
      "http_directory": "http",
      "iso_checksum": "{{user `iso_md5`}}",
      "iso_checksum_type": "md5",
      "iso_url": "{{user `iso_url`}}",
      "shutdown_command": "echo 'halt -p' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_port": "{{user `ssh_port`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "type": "virtualbox-iso",
      "vm_name": "{{user `vm_name`}}",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `core`}}"]
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
	  "compression_level": "9",
	  "keep_input_artifact": true,
	  "output": "{{user `vm_name`}}.box"
    }
  ],
  "provisioners": [
    {
     "type": "file",
     "source": "files/motd",
     "destination": "/tmp/motd"
    },
    {
      "type": "file",
      "source": "files/stuff",
      "destination": "/tmp/stuff"
    },
    {
      "type": "shell",
      "pause_before": "5s",
      "execute_command": "echo 'vagrant'|sudo -S -E bash '{{.Path}}'",
      "override": {
        "virtualbox-iso": {
          "scripts": [
            "scripts/setup-debian.sh",
            "scripts/install.sh",
			"scripts/virtualbox-debian.sh",
			"scripts/ansible-debian.sh"
          ]
        }
      }
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/playbook-debian.yml"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh"
    }

  ]
}

