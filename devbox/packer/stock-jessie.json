{
  "description": "Build Debian Jessie x86_64",
  "push": {
    "name": "{{user `atlas_username`}}/{{user `atlas_name`}}",
    "vcs": true
  },
  "variables": {
      "release_name": "jessie",
      "release_version": "{{isotime \"2006.01.02.15.04\"}}",
      "debian_version": "8.5.0",
      "debian_arch": "amd64",
      "atlas_username": "{{env `ATLAS_USERNAME`}}",
      "atlas_name": "jessie"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><wait>",
        "install auto <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `release_name`}}.cfg <wait>",
        "debian-installer=en_US locale=en_US.UTF-8 keymap=us <wait>",
        "netcfg/get_hostname={{user `release_name`}} <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "fb=false <wait> debconf/frontend=noninteractive <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "5s",
      "disk_size": 32768,
      "guest_os_type": "Debian_64",
      "headless": true,
      "http_directory": "http",
      "iso_checksum_type": "none",
      "iso_url": "http://cdimage.debian.org/debian-cd/{{user `debian_version`}}/{{user `debian_arch`}}/iso-cd/debian-{{user `debian_version`}}-{{user `debian_arch`}}-netinst.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -hP now",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "vm_name": "debian-{{user `debian_version`}}-{{user `debian_arch`}}",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "256" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
      ]
    }
  ],
  "post-processors": [
    [{
      "type": "vagrant",
      "compression_level": "9",
      "output": "./builds/debian-{{user `release_name`}}-{{user `debian_arch`}}-{{user `release_version`}}.box",
      "keep_input_artifact": false,
      "only": ["virtualbox-iso"]
    },
    {
      "type": "atlas",
      "only": ["virtualbox-iso"],
      "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
      "artifact_type": "vagrant.box",
      "metadata": {
        "provider": "virtualbox",
        "version": "{{user `release_version`}}"
      }
    }]
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/sshd.sh",
        "scripts/vagrant.sh",
        "scripts/networking.sh",
        "scripts/vbox-addons.sh",
        "scripts/cleanup.sh"
      ],
      "only": ["virtualbox-iso"]
    }
  ]
}
